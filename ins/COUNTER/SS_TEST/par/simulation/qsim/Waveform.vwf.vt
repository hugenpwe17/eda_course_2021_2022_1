`timescale 1 ps/ 1 ps
module SS_TEST_vlg_sample_tst(
	clk,
	load,
	rst_n,
	sampler_tx
);
input  clk;
input  load;
input  rst_n;
output sampler_tx;

reg sample;
time current_time;
always @(clk or load or rst_n)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module SS_TEST_vlg_check_tst (
	seq_jug,
	sampler_rx
);
input  seq_jug;
input sampler_rx;

reg  seq_jug_expected;

reg  seq_jug_prev;

reg  seq_jug_expected_prev;

reg  last_seq_jug_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	seq_jug_prev = seq_jug;
end

// update expected /o prevs

always @(trigger)
begin
	seq_jug_expected_prev = seq_jug_expected;
end



// expected seq_jug
initial
begin
	seq_jug_expected = 1'bX;
end 
// generate trigger
always @(seq_jug_expected or seq_jug)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected seq_jug = %b | ",seq_jug_expected_prev);
	$display("| real seq_jug = %b | ",seq_jug_prev);
`endif
	if (
		( seq_jug_expected_prev !== 1'bx ) && ( seq_jug_prev !== seq_jug_expected_prev )
		&& ((seq_jug_expected_prev !== last_seq_jug_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port seq_jug :: @time = %t",  $realtime);
		$display ("     Expected value = %b", seq_jug_expected_prev);
		$display ("     Real value = %b", seq_jug_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_seq_jug_exp = seq_jug_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module SS_TEST_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clk;
reg load;
reg rst_n;
// wires                                               
wire seq_jug;

wire sampler;                             

// assign statements (if any)                          
SS_TEST i1 (
// port map - connection between master ports and signals/registers   
	.clk(clk),
	.load(load),
	.rst_n(rst_n),
	.seq_jug(seq_jug)
);

// clk
always
begin
	clk = 1'b0;
	clk = #10000 1'b1;
	#10000;
end 

// load
initial
begin
	load = 1'b0;
	load = #40000 1'b1;
	load = #20000 1'b0;
end 

// rst_n
initial
begin
	rst_n = 1'b1;
end 

SS_TEST_vlg_sample_tst tb_sample (
	.clk(clk),
	.load(load),
	.rst_n(rst_n),
	.sampler_tx(sampler)
);

SS_TEST_vlg_check_tst tb_out(
	.seq_jug(seq_jug),
	.sampler_rx(sampler)
);
endmodule

